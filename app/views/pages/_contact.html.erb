<div id="contact">
  <div class="container-fluid infos">
    <div class="row">
      <div class="col s10 offset-s1 col m8 offset-m2">
      <h2>Contact</h2>
      <div class="contact-form">
        <%= simple_form_for Contact.new, :html => {:class => 'form-horizontal' } do |f| %>
          <%= f.error_notification %>
              <%= f.input :name, :required => true, :placeholder => 'Votre nom', :error_html => { :id => "name_error"} %>
              <%= f.input :email, :required => true, :placeholder => 'Votre email', :error_html => { :id => "email_error"} %>
                 <div class="textarea text-center">
                    <%= f.text_area(:message, :placeholder => 'Votre message') %>
                  </div>
              <div class= "hidden">
                <%= f.input :nickname, :hint => 'Leave this field blank!' %>
              </div>

              <div class="btn-form text-center">
                <%= f.submit "Envoyer", :class => "btn-cadre btn"%>
              </div>

            <% end %>
            <p class="bloc-infos">Vous pouvez nous contacter directement Ã  l'adresse: <a href="mailto:contact@secoya.fr">contact@secoya.fr</a></p>
        </div>


    </div>

  </div>
</div>


</div>
